{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./tsc-results"
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "filesGlob": [
    "./src/**/*.ts",
    "!./src/**/*.spec.ts",
    "!./node_modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
